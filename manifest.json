{
  "manifest_version": 3,
  "name": "Dynamic Ad Remover",
  "description": "Removes elements by user-configurable selectors. Exclude domains as needed.",
  "version": "1.0.1",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
